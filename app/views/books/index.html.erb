<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-md-3'>
     
        <h1>User info</h1>
        <% if current_user.image.attached? %>
          <%= image_tag current_user.image, size: "150x150" %>
        <% else %>
            <%= image_tag 'no_image', size: "150x150" %>
        <% end %>

      <table class = "table">
        <tbody>
          <tr>
            <th>
              name
            </th>
            <td>
              <%= @user.name %>
            </td>
          </tr>
      
          <tr>
            <th>
              introduction
            </th>
            <td>
              <%= @user.introduction %>
            </td>
          </tr>
        </tbody>  
      </table>

        <%= link_to edit_user_path(@user.id) , class: "btn btn-outline-secondary btn-block" do %>
          <i class = "fas fa-user-cog"></i>        
        <% end %>

        <h1>New book</h1>
        <%= form_with model: Book.new do |f| %>
          <%= f.label :title, 'Title' %>
          <div><%= f.text_field :title %></div>

          <%= f.label :body, 'Opinion' %>
          <div><%= f.text_area :body %></div>

          <%= f.submit 'Create Book' , class: "btn btn-success" %>
        <% end %>
    </div>

    <div class = 'col-md-8 offset-md-1'>
       <h1>Books</h1>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>
              </th>
              <th>
                Title
              </th>
              <th>
                Opinion
              </th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <% if book.user.image.attached? %>
              <%= image_tag book.user.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %>
              </td>
              <td>
                <span><%= link_to book.title , book_path(book.id) %></span>
              </td>
              <td>
                <span><%= book.body %></span>
              </td>
            </tr>
          <% end %> 
          </tbody>
      </table>
    </div>
  </div>
</div>
