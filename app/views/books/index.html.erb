<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-md-3'>

    <%= render 'list', user: @user %>

    <div class = 'col-md-8 offset-md-1'>
       <h1>Books</h1>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>
              </th>
              <th>
                Title
              </th>
              <th>
                Opinion
              </th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(@user.id) do %>
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              <% end %>
              </td>
              <td>
                <span><%= link_to book.title , book_path(book.id) %></span>
              </td>
              <td>
                <span><%= book.body %></span>
              </td>
            </tr>
          <% end %> 
          </tbody>
      </table>
    </div>
  </div>
</div>
