<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-md-3'>

    <%= render 'list', user: @user %>

    <div class = 'col-md-8 offset-md-1'>
       <h2>Users</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>
                image
              </th>
              <th>
                name
              </th>
              <th>
              </th>
            </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <% if user.image.attached? %>
                    <%= image_tag book.user.image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <span><%= user.name %></span>
              </td>
              <td>
                <span><%= link_to "Show" , user_path(user.id) %></span>
              </td>
            </tr>
          <% end %> 
          </tbody>
      </table>
    </div>
  </div>
</div>